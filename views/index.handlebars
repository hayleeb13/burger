<h1>Eat-Da-Burger!</h1>

<div class="row">
  <div class="column">
    <div class="not-devoured">
      {{#each burgers}}
      {{#unless devoured}}
      <ul>
        <div class="not-devoured-two">
            {{id}} . 
            {{burger_name}}
            <button class="change-burger" data-id="{{id}}" data-newburger="{{devoured}}">
              Devour!
            </button>
        </div>
      </ul>
      {{/unless}}
      {{/each}}
    </div>
  </div>
  <div class="column">
    <div class="devoured">
      {{#each burgers}}
      {{#if devoured}}
      <ul>
        <div class="devoured-two">
        {{id}} . {{burger_name}}
        </div>
      </ul>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<form class="create-form">

  <div class="form-group">
    <textarea id="bur" name="burger" rows="6" cols="30"></textarea>
  </div>

  <button type="submit">Submit</button>
</form>

<p>Enter a burger you want to eat and click the Submit button.</p>